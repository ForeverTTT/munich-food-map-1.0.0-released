/* pages/me/history/history.wxss */
.container {
  position: relative;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.2;
}

.back-button {
  position: absolute;
  top: 80rpx;
  left: 30rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 6rpx 20rpx;
  border-radius: 28rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  min-width: 80rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 60rpx 0 30rpx;
  color: #333;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  color: #666;
  font-size: 28rpx;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #666;
  font-size: 28rpx;
}

.restaurants-container {
  margin-top: 10rpx;
  padding-bottom: 60rpx;
}

.restaurant-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.restaurant-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.restaurant-info {
  flex: 1;
  overflow: hidden;
}

.restaurant-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.restaurant-address {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.delete-button {
  padding: 20rpx;
  margin: -20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-text {
  font-size: 40rpx;
  color: #999;
  font-weight: bold;
}
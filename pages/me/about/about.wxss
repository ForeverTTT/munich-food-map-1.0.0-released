/* pages/me/about/about.wxss */
.container {
  min-height: 100%;
  position: relative;
  background-color: #f5f5f5;
  overflow: hidden;
}

.bg-image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 220rpx;
  z-index: 5;
  object-fit: cover;
}

.banner-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.4));
  z-index: 6;
}

.back-button {
  position: fixed;
  top: 40rpx;
  left: 30rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  font-size: 28rpx;
  z-index: 100;
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 30rpx;
  margin-top: 10rpx;
}

.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-content {
  color: #666;
}

.text-block {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  transition: transform 0.3s ease;
}

.feature-item:active {
  transform: scale(0.98);
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.contact-icon {
  font-size: 36rpx;
}

.contact-text {
  font-size: 28rpx;
  color: #666;
}

.version-info {
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 0;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}
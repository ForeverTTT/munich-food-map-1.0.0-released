/* pages/friend/friend.wxss */
.container {
  position: relative;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  background-color: #f8f9fa;
  background-image: linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.6) 100%), url('https://static-assets.microncredits.com/pattern.png');
  background-size: cover;
  background-attachment: fixed;
  z-index: 2;
  width: 100%;
}

.bg-image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 260rpx;
  z-index: 5;
  object-fit: cover;
  opacity: 1;
}

.banner-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 260rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.5));
  z-index: 6;
}

.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: transparent;
  padding: 30rpx 25rpx;
  z-index: 15;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 46rpx;
  font-weight: bold;
  text-align: center;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 1rpx 1rpx 8rpx rgba(0,0,0,0.6);
  margin-bottom: 25rpx;
  width: 100%;
}

.filter-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.12);
  width: 92%;
  margin-left: auto;
  margin-right: auto;
  border: 1rpx solid rgba(255,255,255,0.8);
}

.filter-item {
  background-color: #fff;
  padding: 14rpx 18rpx;
  border-radius: 16rpx;
  flex: 1;
  margin: 0 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  border: 1rpx solid #f0f0f0;
  min-width: 140rpx;
  transition: all 0.3s ease;
}

.filter-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.03);
}

.picker-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.picker-label {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 7rpx;
}

.picker-value {
  font-size: 26rpx;
  color: #333;
  font-weight: normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.header-post-button {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FF9843, #F97316);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  flex-shrink: 0;
  box-shadow: 0 6rpx 18rpx rgba(249, 115, 22, 0.35);
  transition: all 0.3s ease;
}

.header-post-button:active {
  transform: scale(0.95) translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(249, 115, 22, 0.25);
}

.header-post-button .plus {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1;
}

/* 发帖区样式 */
.posts-section {
  margin-top: 280rpx;
  padding-bottom: 120rpx;
  width: 100%;
}

.post-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.post-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  overflow: hidden;
  position: relative;
  border: 1rpx solid rgba(255,255,255,0.8);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.post-item::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF9843, #F97316);
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.post-header {
  display: flex;
  padding: 20rpx;
  align-items: center;
  position: relative;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 16rpx;
  width: 100%;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f0f0f0;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  border: 3rpx solid #fff;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  font-size: 46rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 8rpx;
}

.post-tag {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.date-tag {
  color: #0EA5E9;
  background-color: rgba(14, 165, 233, 0.1);
  border: 1rpx solid rgba(14, 165, 233, 0.2);
}

.meal-tag {
  color: #F97316;
  background-color: rgba(249, 115, 22, 0.1);
  border: 1rpx solid rgba(249, 115, 22, 0.2);
}

.people-tag {
  color: #10B981;
  background-color: rgba(16, 185, 129, 0.1);
  border: 1rpx solid rgba(16, 185, 129, 0.2);
}

.post-content {
  margin: 20rpx 0;
  width: 100%;
  position: relative;
  padding-left: 8rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.contact-share-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  width: 100%;
}

.wxid-container {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: rgba(249, 115, 22, 0.05);
  border-radius: 12rpx;
  flex: 1;
  border: 1rpx solid rgba(249, 115, 22, 0.1);
  transition: all 0.3s ease;
}

.wxid-container:active {
  background-color: rgba(249, 115, 22, 0.1);
}

.wxid-label {
  font-size: 26rpx;
  color: #666;
}

.wxid-value {
  font-size: 26rpx;
  color: #F97316;
  font-weight: 500;
}

.copy-icon {
  font-size: 22rpx;
  color: #fff;
  background: linear-gradient(to right, #FF9843, #F97316);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(249, 115, 22, 0.2);
  transition: all 0.3s ease;
}

.copy-icon:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 3rpx rgba(249, 115, 22, 0.15);
}

.share-button {
  display: flex;
  align-items: center;
  background-color: rgba(14, 165, 233, 0.05);
  border-radius: 12rpx;
  border: none;
  padding: 12rpx 20rpx;
  margin: 0 0 0 16rpx;
  line-height: normal;
  font-size: inherit;
  font-weight: normal;
  color: inherit;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(14, 165, 233, 0.1);
}

.share-button:active {
  transform: scale(0.98);
  background-color: rgba(14, 165, 233, 0.1);
}

.share-button::after {
  display: none;
}

.icon {
  font-size: 32rpx;
  color: #0EA5E9;
}

.share-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  margin-left: 8rpx;
}

/* 浮动发帖按钮 */
.floating-button {
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #F97316, #FF9843);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 30rpx rgba(249, 115, 22, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.floating-button:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(249, 115, 22, 0.3);
}

.float-plus {
  color: #fff;
  font-size: 40rpx;
  margin-right: 10rpx;
}

.float-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-top: 280rpx;
  border: 1rpx solid rgba(255,255,255,0.8);
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f5f5f5;
  border-top: 6rpx solid #FF9843;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  margin-top: 320rpx;
  width: 660rpx;
  border: 1rpx solid rgba(255,255,255,0.8);
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-button {
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(249, 115, 22, 0.3);
  transition: all 0.3s ease;
}

.empty-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(249, 115, 22, 0.2);
}

/* 删除按钮样式 */
.delete-button {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0,0,0,0.05);
}

.delete-button:active {
  transform: scale(0.9);
  background-color: rgba(255, 59, 48, 0.1);
}

.trash-icon {
  font-size: 36rpx;
  color: #ff3b30;
}
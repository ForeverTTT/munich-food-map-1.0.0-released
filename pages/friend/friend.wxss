/* pages/friend/friend.wxss */
.container {
  position: relative;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  background-color: #f6f6f6;
  z-index: 2;
  width: 100%;
}

.bg-image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 220rpx;
  z-index: 5;
  object-fit: cover;
  opacity: 1;
}

.banner-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 220rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.4));
  z-index: 6;
}

.page-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: transparent;
  padding: 30rpx 25rpx;
  z-index: 15;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  text-align: center;
  color: #fff;
  letter-spacing: 2rpx;
  text-shadow: 1rpx 1rpx 4rpx rgba(0,0,0,0.5);
  margin-bottom: 25rpx;
  width: 100%;
}

.filter-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
  padding: 13rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  width: 92%;
  margin-left: auto;
  margin-right: auto;
}

.filter-item {
  background-color: #fff;
  padding: 14rpx 18rpx;
  border-radius: 12rpx;
  flex: 1;
  margin: 0 6rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  border: 1rpx solid #f2f2f2;
  min-width: 140rpx;
}

.picker-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.picker-label {
  font-size: 22rpx;
  color: #888;
  margin-bottom: 7rpx;
}

.picker-value {
  font-size: 26rpx;
  color: #333;
  font-weight: normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.header-post-button {
  width: 74rpx;
  height: 74rpx;
  background: linear-gradient(135deg, #FF9843, #F97316);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 15rpx rgba(249, 115, 22, 0.3);
}

.header-post-button .plus {
  color: white;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1;
}

/* 发帖区样式 */
.posts-section {
  margin-top: 250rpx;
  padding-bottom: 120rpx;
  width: 100%;
}

.post-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.post-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
  overflow: hidden;
  position: relative;
}

.post-item::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF9843, #F97316);
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.post-header {
  display: flex;
  padding: 20rpx;
  align-items: center;
  position: relative;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 16rpx;
  width: 100%;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f0f0f0;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  border: 3rpx solid #fff;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  font-size: 42rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 8rpx;
}

.post-tag {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

.date-tag {
  color: #0EA5E9;
  background-color: rgba(14, 165, 233, 0.1);
}

.meal-tag {
  color: #F97316;
  background-color: rgba(249, 115, 22, 0.1);
}

.people-tag {
  color: #10B981;
  background-color: rgba(16, 185, 129, 0.1);
}

.post-content {
  margin: 20rpx 0;
  width: 100%;
  position: relative;
  padding-left: 8rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.wxid-container {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 12rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  width: fit-content;
}

.wxid-label {
  font-size: 26rpx;
  color: #666;
}

.wxid-value {
  font-size: 26rpx;
  color: #F97316;
  font-weight: 500;
}

.post-divider {
  height: 1rpx;
  background-color: #f2f2f2;
  margin: 20rpx 0;
  width: 100%;
}

.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 10rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  background-color: #f9f9f9;
  transition: all 0.3s;
}

.action-item:active {
  background-color: rgba(0,0,0,0.05);
  transform: scale(0.98);
}

.liked-action {
  background-color: rgba(255,71,87,0.1);
}

.action-share {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 24rpx;
  border-radius: 50rpx;
  background-color: #f9f9f9;
}

.share-text {
  font-size: 26rpx;
  color: #666;
}

.reservation-btn {
  background-color: #ff8c32;
  color: white;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  margin-right: 0;
  background: linear-gradient(135deg, #FF9843, #F97316);
}

.icon {
  font-size: 38rpx;
  color: #999;
}

.icon.liked {
  color: #ff4757;
}

.count {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 浮动发帖按钮 */
.floating-button {
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #F97316, #FF9843);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 30rpx rgba(249, 115, 22, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.floating-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(249, 115, 22, 0.3);
}

.float-plus {
  color: #fff;
  font-size: 40rpx;
  margin-right: 10rpx;
}

.float-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-top: 250rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f5f5f5;
  border-top: 6rpx solid #FF9843;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: #fff;
  border-radius: 16rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  margin-top: 300rpx;
  width: 660rpx;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-button {
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(249, 115, 22, 0.3);
}

/* 评论区域样式 */
.comments-section {
  margin-top: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 16rpx;
}

.comments-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 12rpx;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.comments-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.comments-toggle {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  background-color: rgba(0,0,0,0.03);
  cursor: pointer;
}

.toggle-text {
  font-size: 24rpx;
  color: #666;
  margin-right: 6rpx;
}

.toggle-icon {
  font-size: 22rpx;
  color: #999;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.comment-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 12rpx 16rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.comment-info {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.comment-username {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.no-comments {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.comment-input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx 0;
}

.comment-input {
  flex: 1;
  height: 64rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border: 1px solid #eee;
}

.comment-submit-btn {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
  background-color: #ddd;
  color: #666;
  border-radius: 32rpx;
  min-width: 80rpx;
  text-align: center;
}

.comment-submit-btn.active {
  background: linear-gradient(135deg, #FF9843, #F97316);
  color: #fff;
}

/* 添加删除按钮的样式 */
.delete-button {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  z-index: 5;
}

.delete-icon {
  font-size: 32rpx;
  color: #ff4d4f;
}

.delete-button:active {
  transform: scale(0.95);
  opacity: 0.9;
}
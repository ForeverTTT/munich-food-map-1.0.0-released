/* pages/friend/post/post.wxss */
.container {
  padding: 40rpx 0;
  background: #f8f9fa;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
}

.back-button {
  position: absolute;
  top: 90rpx;
  left: 30rpx;
  z-index: 10;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.back-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  margin-top: 60rpx;
}

.form-group {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.08);
  width: 90%;
  margin: 0 auto;
}

.form-item {
  margin-bottom: 40rpx;
  position: relative;
  width: 100%;
}

.form-item:last-child {
  margin-bottom: 10rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.picker {
  background: #f5f7fa;
  padding: 26rpx 30rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  box-shadow: inset 0 2rpx 6rpx rgba(0,0,0,0.03);
  border: 1px solid rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.picker-icon {
  font-size: 36rpx;
  color: #FF9843;
}

.content-input {
  width: 100%;
  height: 200rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.wxid-input {
  width: 100%;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.required {
  color: #f56c6c;
  margin-left: 5rpx;
  font-weight: bold;
  display: inline-block;
}

.char-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.action-section {
  width: 100%;
  padding: 60rpx 0 50rpx;
}

.submit-btn {
  width: 90%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF9843, #FF7F00);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(255,127,0,0.3);
  transition: all 0.3s ease;
  margin: 0 auto;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(255,127,0,0.2);
}

.submit-text {
  letter-spacing: 4rpx;
}
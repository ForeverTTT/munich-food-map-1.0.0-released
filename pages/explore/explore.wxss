/* pages/explore/explore.wxss */
.container {
  position: relative;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  background-color: #f8f9fa;
  background-image: linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0.6) 100%);
  background-size: cover;
  background-attachment: fixed;
  z-index: 2;
  width: 100%;
}
.bg-image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 260rpx;
  z-index: 6;
  object-fit: cover;
  opacity: 1;
}

.banner-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 260rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.5));
  z-index: 6;
}

.page-header {
  position: fixed;
  top: 0rpx; /* 从导航栏下方开始 */
  left: 0;
  right: 0;
  background-color: transparent;
  padding: 30rpx 25rpx;
  z-index: 15;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 46rpx;
  font-weight: bold;
  text-align: center;
  color: #fff;
  letter-spacing: 4rpx;
  text-shadow: 1rpx 1rpx 8rpx rgba(0,0,0,0.6);
  margin-bottom: 25rpx;
  width: 100%;
}

.category-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
  padding: 15rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.12);
  width: 92%;
  margin-left: auto;
  margin-right: auto;
  border: 1rpx solid rgba(255,255,255,0.8);
}

.category-item {
  padding: 12rpx 24rpx;
  background-color: #fff;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  border: 1rpx solid #f2f2f2;
}

.category-item.active {
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  border: 1rpx solid transparent;
}

.add-post-btn {
  width: 76rpx;
  height: 76rpx;
  background: linear-gradient(135deg, #FF9843, #F97316);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 12rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 15rpx rgba(249, 115, 22, 0.3);
}

.plus {
  color: white;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 1;
}

.loading-container {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 220rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #F97316;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: #fff;
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  margin-top: 410rpx; /* 90rpx(导航高度) + 320rpx(原始外边距) */
  width: 660rpx;
  border: 1rpx solid rgba(255,255,255,0.8);
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-button {
  padding: 20rpx 80rpx;
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.posts-section {
  margin-top: 280rpx; /* 90rpx(导航高度) + 280rpx(原始外边距) */
  padding-bottom: 120rpx;
  width: 100%;
  position: relative;
  z-index: 5;
}

.post-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
}

.post-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
  overflow: hidden;
  position: relative;
}

.post-item::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF9843, #F97316);
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.delete-button {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  transition: all 0.3s ease;
  z-index: 10;
  border: 1rpx solid #ffeeee;
}

.delete-button:active {
  transform: scale(0.9);
  background-color: rgba(255, 59, 48, 0.1);
}

.trash-icon {
  font-size: 40rpx;
  color: #ff3b30;
}

.post-header {
  display: flex;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f2f2f2;
  margin-bottom: 16rpx;
  width: 100%;
  position: relative;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #f0f0f0;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  border: 3rpx solid #fff;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #F97316, #FF9843);
  color: #fff;
  font-size: 42rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.shop-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 8rpx;
}

.shop-name {
  font-size: 24rpx;
  font-weight: bold;
  color: #F97316;
  background-color: rgba(249, 115, 22, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

.rating-container {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #FACC15;
  background-color: rgba(250, 204, 21, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

.post-date {
  font-size: 24rpx;
  color: #0EA5E9;
  background-color: rgba(14, 165, 233, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

.post-content {
  margin: 20rpx 0;
  width: 100%;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.7;
  width: 100%;
  word-break: break-all;
  letter-spacing: 0.5rpx;
  margin-bottom: 20rpx;
}

.post-image-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  object-fit: cover;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 16rpx 0;
}

.tag-item {
  font-size: 22rpx;
  color: #666;
  background-color: #f8f8f8;
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

.post-actions {
  display: flex;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f2f2f2;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  background-color: #f9f9f9;
}

.action-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}

.action-count {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.action-item.liked .action-icon {
  color: #ff4757;
}

.action-item.liked .action-count {
  color: #ff4757;
}

.share-button {
  background: #f9f9f9;
  border: none;
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  margin: 0;
  line-height: 1;
  margin-right: 30rpx;
}

.share-button::after {
  display: none;
}

.action-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.comments-section {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.comment-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #efefef;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  background-color: #F97316;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.comment-content {
  flex: 1;
}

.comment-user {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.comment-username {
  font-size: 26rpx;
  color: #666;
  font-weight: bold;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.no-comments {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

.comment-input-container {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #efefef;
}

.comment-input {
  flex: 1;
  height: 70rpx;
  background-color: #fff;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #333;
}

.comment-submit {
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #ddd;
  color: #fff;
  border-radius: 35rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
}

.comment-submit.active {
  background-color: #F97316;
}

.load-more-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.load-more-button {
  padding: 20rpx 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

.loading-more {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.loading-icon-small {
  width: 30rpx;
  height: 30rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #F97316;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 10rpx;
}

.loading-more-text {
  font-size: 26rpx;
  color: #999;
}

.no-more-data {
  padding: 20rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}

.floating-button {
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #F97316, #FF9843);
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 30rpx rgba(249, 115, 22, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.floating-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(249, 115, 22, 0.3);
}

.float-plus {
  color: #fff;
  font-size: 40rpx;
  margin-right: 10rpx;
}

.float-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.filter-tags {
  display: flex;
  gap: 12rpx;
}

/* 添加全屏加载动画样式 */
.fullscreen-loading {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  z-index: 9999;
}

.loading-spinner {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 10rpx solid #f3f3f3;
  border-top: 10rpx solid #F97316;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

.loading-text {
  font-size: 36rpx;
  color: #F97316;
  font-weight: 500;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
/* pages/explore/explore.wxss */
page {
  height: 100vh;
  background: #f6f6f6;
}

.container {
  position: relative;
  padding: 0;
  min-height: 100vh;
  background: #f6f6f6;
  z-index: 2;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 140rpx;
}

.bg-image {
  position: fixed;
  top: 0;
  width: 100%;
  height: 180rpx;
  z-index: 5;
  object-fit: cover;
  opacity: 1;
}

.banner-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 180rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.4));
  z-index: 6;
}

.back-button {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 40rpx;
  font-size: 28rpx;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  color: #333;
  font-weight: 500;
}

.content-wrapper {
  margin-top: 160rpx;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 餐厅信息卡片 */
.shop-info-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 24rpx;
  position: relative;
}

.shop-info-card::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF9843, #F97316);
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.shop-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.shop-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.shop-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.title-container {
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.cuisine-badge {
  font-size: 24rpx;
  color: #F97316;
  background-color: rgba(249, 115, 22, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.favorite-button {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 152, 67, 0.1), rgba(249, 115, 22, 0.1));
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorite-icon {
  font-size: 40rpx;
  color: #F97316;
}

.shop-rating {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-score {
  font-size: 32rpx;
  color: #F97316;
  font-weight: bold;
  margin-right: 12rpx;
}

.rating-stars {
  display: flex;
}

.star {
  color: #F97316;
  font-size: 24rpx;
  margin-right: 2rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  font-size: 22rpx;
  color: #666;
  background-color: rgba(249, 115, 22, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 50rpx;
}

/* 餐厅详细信息 */
.info-section {
  padding: 24rpx 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  justify-content: space-between;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 36rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
}

.info-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

/* 卡片共用样式 */
.description-card,
.specialties-card,
.transport-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 24rpx;
  position: relative;
  padding: 24rpx 30rpx;
}

.description-card::after,
.specialties-card::after,
.transport-card::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF9843, #F97316);
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 特色菜品样式 */
.specialties-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.specialty-item {
  display: flex;
  align-items: center;
}

.specialty-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.specialty-name {
  font-size: 28rpx;
  color: #333;
}

/* 交通指南样式 */
.transport-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.transport-option {
  display: flex;
  align-items: center;
}

.transport-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.transport-text {
  font-size: 28rpx;
  color: #666;
}

/* 底部标签栏 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #eee;
  z-index: 100;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-item text {
  line-height: 1.2;
}

.map-icon {
  margin-left: 10rpx;
  font-size: 36rpx;
  color: #4285F4;
  background-color: rgba(66, 133, 244, 0.1);
  border-radius: 50%;
  padding: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.map-hint {
  font-size: 22rpx;
  color: #4285F4;
  margin-top: 4rpx;
}
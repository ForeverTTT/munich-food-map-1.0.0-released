/* pages/explore/post/post.wxss */

.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
  padding-top: 0;
}

.page-header {
  background: linear-gradient(135deg, #FF8E52, #F97316);
  padding: 25rpx 30rpx 20rpx;
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(249, 115, 22, 0.2);
  border-radius: 0 0 26rpx 26rpx;
  margin-bottom: 10rpx;
  margin-top: 0;
}

.header-content {
  display: flex;
  align-items: flex-start;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  backdrop-filter: blur(4rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.header-text {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  letter-spacing: 1rpx;
}

.form-container {
  padding: 25rpx 25rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 550;
  display: flex;
  align-items: center;
}

.required {
  color: #F97316;
  font-weight: bold;
  margin-left: 6rpx;
}

.hint {
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 14rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #F97316;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(249, 115, 22, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f9f9f9;
  border-radius: 14rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #F97316;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(249, 115, 22, 0.1);
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 评分星星 */
.rating-container {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.rating-star {
  font-size: 54rpx;
  color: #ddd;
  margin-right: 12rpx;
  transition: transform 0.2s;
}

.rating-star.active {
  color: #FFBB00;
  text-shadow: 0 0 10rpx rgba(255, 187, 0, 0.4);
}

.rating-star:active {
  transform: scale(1.2);
}

.rating-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 12rpx;
  margin-left: 6rpx;
}

/* 分类选择器 */
.form-picker {
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 14rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.form-picker:active {
  background: #f0f0f0;
}

.picker-arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotate(45deg);
  margin-right: 10rpx;
}

/* 标签 */
.tag-input-container {
  display: flex;
  width: 100%;
}

.tag-input {
  flex: 1;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 14rpx 0 0 14rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-right: none;
  transition: all 0.3s;
}

.tag-input:focus {
  background: #fff;
}

.tag-add-btn {
  width: 140rpx;
  height: 80rpx;
  background: linear-gradient(to right, #FF8E52, #F97316);
  color: white;
  border-radius: 0 14rpx 14rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(249, 115, 22, 0.2);
  transition: all 0.3s;
}

.tag-add-btn:active {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(249, 115, 22, 0.15);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.tag-item {
  background-color: #FFF5E9;
  border: 2rpx solid #FFE0C4;
  color: #F97316;
  padding: 10rpx 24rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(249, 115, 22, 0.1);
  transition: all 0.3s;
}

.tag-item:active {
  transform: scale(0.97);
}

.tag-text {
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tag-delete {
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 1;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 图片上传 */
.image-uploader {
  margin-top: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 210rpx;
  height: 210rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.image-item:active {
  transform: scale(0.98);
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: all 0.3s;
}

.image-delete:active {
  transform: scale(1.1);
  background-color: rgba(255, 59, 48, 0.8);
}

.image-add {
  width: 210rpx;
  height: 210rpx;
  background-color: #f9f9f9;
  border: 2rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.image-add:active {
  background-color: #f0f0f0;
}

.add-icon {
  font-size: 68rpx;
  color: #ccc;
  font-weight: lighter;
}

.image-counter {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  height: 84rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 14rpx;
  font-size: 30rpx;
  font-weight: 550;
  transition: all 0.3s;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 24rpx;
  border: 2rpx solid #e0e0e0;
}

.btn-cancel:active {
  background-color: #ebebeb;
}

.btn-submit {
  background: linear-gradient(to right, #FF8E52, #F97316);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(249, 115, 22, 0.25);
}

.btn-submit:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(249, 115, 22, 0.2);
}

.btn:disabled {
  opacity: 0.6;
} 
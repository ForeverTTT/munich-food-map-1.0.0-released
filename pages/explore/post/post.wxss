/* pages/explore/post/post.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.page-header {
  background: linear-gradient(135deg, #FF8E52, #F97316);
  padding: 40rpx 30rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.form-container {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #F97316;
  font-weight: bold;
  margin-left: 4rpx;
}

.hint {
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 评分星星 */
.rating-container {
  display: flex;
  align-items: center;
}

.rating-star {
  font-size: 50rpx;
  color: #ddd;
  margin-right: 10rpx;
}

.rating-star.active {
  color: #FFBB00;
}

.rating-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 分类选择器 */
.form-picker {
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotate(45deg);
}

/* 标签 */
.tag-input-container {
  display: flex;
  width: 100%;
}

.tag-input {
  flex: 1;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 10rpx 0 0 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
}

.tag-add-btn {
  width: 140rpx;
  height: 80rpx;
  background-color: #F97316;
  color: white;
  border-radius: 0 10rpx 10rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tag-item {
  background-color: #FFF5E9;
  border: 2rpx solid #FFE0C4;
  color: #F97316;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.tag-text {
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tag-delete {
  margin-left: 10rpx;
  font-size: 32rpx;
  line-height: 1;
}

/* 图片上传 */
.image-uploader {
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.image-add {
  width: 200rpx;
  height: 200rpx;
  background-color: #f9f9f9;
  border: 2rpx dashed #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.add-icon {
  font-size: 64rpx;
  color: #ccc;
  font-weight: lighter;
}

.image-counter {
  font-size: 24rpx;
  color: #999;
}

/* 按钮 */
.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.btn-submit {
  background: linear-gradient(to right, #FF8E52, #F97316);
  color: white;
}

.btn:disabled {
  opacity: 0.6;
} 